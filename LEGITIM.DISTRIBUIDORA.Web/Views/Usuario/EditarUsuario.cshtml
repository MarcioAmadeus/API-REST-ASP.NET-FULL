@model LEGITIM.DISTRIBUIDORA.Web.Models.Usuarios.CadastraUsuarioViewModel


@using LEGITIM.DISTRIBUIDORA.Web.Utils.Usuarios

    
@{
    ViewBag.Title = "Editar Usuário";
    var Resultado = ViewBag.Resultado;
    var Falha = ViewBag.Falha;
    var Perfis = ViewBag.Perfis;
    var Usuario = UsuarioAtual.getUsuarioLogado();
}


<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark">
                <i class="fa fa-lg fa-fw fa-user"></i>
                Editar Usuários
            </h1>
        </div>
    </div>
    <section id="widget-grid">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget jarviswidget-color-blueDark" data-widget-editbutton="false" data-widget-deletebutton="false" id="wid-id-0">
                    <header role="heading">
                        <span class="widget-icon"> <i class="fa fa-user"></i> </span>
                        <h2>Cliente</h2>
                    </header>
                    <div role="content">
                        <div class="widget-body no-padding">
                            @using (Html.BeginForm("EditarUsuario", "Usuario", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                <div class="smart-form">
                                    @Html.AntiForgeryToken()
                                    @Html.Partial("_FormUsuario")
                                    <footer>
                                        @if (Usuario.Perfil.Descricao == "Administrador do Sistema")
                                        {
                                        @Html.ActionLink("Cancelar", "ListaUsuario",
                                       null, new { @class = "btn btn-default" })
                                        }
                                        else
                                        {
                                            @Html.ActionLink("Voltar", "Index", "Home",
                                       null, new { @class = "btn btn-default" })
                                        }
                                        <button class="btn btn-primary" type="submit">
                                            <i class="fa fa-save"></i>
                                            Salvar
                                        </button>
                                    </footer>
                                    @*<div class="form-group">
                                            <button class="btn btn-primary" id="btnAdicionar" type="submit">
                                                <i class="fa fa-save"></i>
                                                Cadastrar
                                            </button>
                                            <button type="reset" class="btn btn-default" data-dismiss="modal"> Limpar </button>
                                            <button type="button" onclick="goBack()" class="btn btn-default" data-dismiss="modal"> Voltar </button>
                                        </div>*@
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
