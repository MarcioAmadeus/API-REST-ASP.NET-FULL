@model LEGITIM.DISTRIBUIDORA.Web.Models.Acoes.PerfilAcaoViewModel
@{
    ViewBag.Title = "Editar Permissões de Perfil";
    var Resultado = ViewBag.Resultado;
    var Perfis = ViewBag.Perfis;
}

<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark">
                <i class="fa fa-lg fa-fw fa-user"></i>
                Editar Permissão
            </h1>
        </div>
    </div>
    <section id="widget-grid">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget jarviswidget-color-blueDark" data-widget-editbutton="false" data-widget-deletebutton="false" id="wid-id-0">
                    <header role="heading">
                        <span class="widget-icon"> <i class="fa fa-user"></i> </span>
                        <h2>Usuário</h2>
                    </header>
                    <div role="content">
                        <div class="widget-body">
                            @using (Html.BeginForm("EditarPermissao", "Usuario", FormMethod.Post))
                            {
                                <fieldset>
                                    <div class="form-horizontal">

                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        @Html.HiddenFor(model => model.Id)
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.PerfilDescricao, new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                @Html.DropDownListFor(model => model.Id, new SelectList(Perfis, "Id", "Descricao"), new { @class = "form-control formfield", @id = "PerfilId" })
                                            </div>
                                        </div>
                                        <table id="datatable_fixed_column" class="table table-bordered table-striped table-hover datatable_fixed_column" width="100">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Acoes[0].Controller)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Acoes[0].Action)
                                                    </th>
                                                    
                                                </tr>
                                            </thead>
                                            @if (Model.Acoes != null && Model.Acoes.Count > 0)
                                            {
                                                for (int i = 0; i < Model.Acoes.Count; i++)
                                                {
                                                    @Html.HiddenFor(modelItem => Model.Acoes[i].Id)
                                                    @Html.HiddenFor(modelItem => Model.Acoes[i].perfilId)
                                                    @Html.HiddenFor(modelItem => Model.Acoes[i].URL)

                                                    @Html.HiddenFor(modelItem => Model.Acoes[i].Controller)
                                                    @Html.HiddenFor(modelItem => Model.Acoes[i].Action)

                                                    <tr>
                                                        <td>
                                                            @Model.Acoes[i].Controller
                                                        </td>
                                                        <td>
                                                            @Model.Acoes[i].Action
                                                        </td>
                                                        <td>
                                                            @Html.CheckBoxFor(modelItem => Model.Acoes[i].check) Permitir
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                        </table>
                                    </div>
                                </fieldset>
                                <div class="form-group">
                                    <button class="btn btn-primary" id="btnCadastrar" type="submit">
                                        <i class="fa fa-save"></i>
                                        Salvar
                                    </button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
<script src="~/Scripts/libs/jquery-2.1.1.min.js"></script>
<script src="~/Scripts/Custom/EditarPermissaoScripts.js" type="text/javascript"></script>

