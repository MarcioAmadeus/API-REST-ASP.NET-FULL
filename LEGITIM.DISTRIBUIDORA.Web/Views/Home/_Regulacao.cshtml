@model LEGITIM.DISTRIBUIDORA.Web.Models.Home.HomeAlunoViewModel
@using LEGITIM.DISTRIBUIDORA.Utils;
@using LEGITIM.DISTRIBUIDORA.Utils.Enums;

@{
    ViewBag.Aviso = "Nenhuma Ação Pendente.";
}
@if (Model == null || Model.ReguladorPendencias.Count < 1)
{
    <div class="alert alert-warning alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        @ViewBag.Aviso
    </div>
}
else
{
    <div class="well steps-history">
        <!-- FOR LOOP -->
        <div class="">
            <table id="myTable" class="table table-condensed table-hover ui-sortable-handle">
                <thead>
                    <tr>
                        <th class="hasinput">
                            <input id="column1" type="text" class="form-control" placeholder="Filtrar Programa" />
                        </th>
                        <th class="hasinput">
                            <input id="column2" type="text" class="form-control" placeholder="Filtrar Turma" />
                        </th>
                        <th class="hasinput">
                            <input id="column4" type="text" class="form-control" placeholder="Filtrar Data Início" />
                        </th>
                        <th class="hasinput">
                            <input id="column5" type="text" class="form-control" placeholder="Filtrar Data Fim" />
                        </th>
                        <th class="hasinput">
                            <input id="column6" type="text" class="form-control" placeholder="Filtrar Aluno" />
                        </th>
                        <th class="hasinput">
                            <input id="column3" type="text" class="form-control" placeholder="Filtrar Ação" />
                        </th>
                    </tr>
                    <tr>
                        <th>Programa</th>
                        <th>Turma</th>
                        <th>Data Início</th>
                        <th>Data Fim</th>
                        <th>Aluno</th>
                        <th>Ação</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model.ReguladorPendencias)
                {
                        <tr id="item">
                            <td>@item.Programa</td>
                            <td>@item.Turma</td>
                            <td>@item.DataIncicio.ToString("dd MMMMMMMMMM yyyy")</td>
                            <td>@item.DataFim.ToString("dd MMMMMMMMMMM yyyy")</td>
                            <td><a href="@item.AlunoPerfilLink">@item.Aluno</a></td>
                            <td><a href="@item.Linktext"> Agendar Banca</a></td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
}
<script type="text/javascript" src="/path/to/jquery-latest.js"></script>
<script type="text/javascript" src="/path/to/jquery.tablesorter.js"></script> 


