@model LEGITIM.DISTRIBUIDORA.Web.Models.Despesas.ImpostosListViewModel


<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9">
            <h1 class="page-title txt-color-blueDark">
                <i class="fa fa-book"></i>
                 Gerenciar Faixa Imposto
            </h1>
        </div>
    </div>

    <div id="wid-id-2" class="jarviswidget jarviswidget-color-blueDark" role="widget">
        <header role="heading">
            <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
            <h2>Imposto</h2>
        </header>

        <div role="content">
            <div class="widget-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(m => m.Id)



                    <p class="padding-bottom-10">
                        <a href="@Url.Action("BlankEditorRowFaixaImposto")" class="btn btn-success btn-xs addItem">
                            <span><i class="fa fa-plus"></i> Adicionar Item</span>
                        </a>
                    </p>
                    <div>
                        <table class="table table-bordered table-hover editorRows">
                            <thead>

                                <tr>
                                    <th rowspan="2">@Html.DisplayNameFor(model => model.ListaImpostos.FirstOrDefault().Receitainicial)</th>
                                    <th rowspan="2">@Html.DisplayNameFor(model => model.ListaImpostos.FirstOrDefault().ReceitaLimite)</th>
                                    <th rowspan="2">@Html.DisplayNameFor(model => model.ListaImpostos.FirstOrDefault().AnexoI)</th>
                                    <th rowspan="2">@Html.DisplayNameFor(model => model.ListaImpostos.FirstOrDefault().AnexoII)</th>
                                    <th rowspan="2">@Html.DisplayNameFor(model => model.ListaImpostos.FirstOrDefault().AnexoIII)</th>
                                    <th rowspan="2">@Html.DisplayNameFor(model => model.ListaImpostos.FirstOrDefault().AnexoIV)</th>
                                    <th rowspan="2">Ação</th>
                                </tr>

                            </thead>
                            <tbody>
                                @foreach (var item in Model.ListaImpostos)
                                {
                                    @Html.Partial("EditorRowImposto", item);
                                }
                            </tbody>
                        </table>
                    </div>
                    @*<div class="modal-footer">
                        @Html.ActionLink("Cancelar", "Detalhar", "ContratoICJ",  new { @class = "btn btn-default" })
                        <button class="btn btn-primary" type="submit">
                            <i class="fa fa-save">Salvar</i>
                        </button>
                    </div>*@
                    <footer>
                        @Html.ActionLink("Cancelar", "GerenciarImpostos",
                              null, new { @class = "btn btn-default" })
                        <button class="btn btn-primary" type="submit">
                            <i class="fa fa-save"></i>
                            Salvar
                        </button>
                    </footer>
                }
            </div>
        </div>
    </div>
</div>