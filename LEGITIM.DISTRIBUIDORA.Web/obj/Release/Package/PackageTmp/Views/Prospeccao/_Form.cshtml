@model  LEGITIM.DISTRIBUIDORA.Web.Models.Prospeccao.ProspeccaoViewModel

@Html.AntiForgeryToken()
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

@{
    var clientes = ViewBag.Clientes as SelectList;
    var listaTipo = ViewBag.ProspeccaoListaTipo;
}

<fieldset>
    @Html.HiddenFor(model => model.Id)

    <div class="row">
        <section class="col col-4">
            <div class="form-group">
                @Html.LabelFor(model => model.Tipo, htmlAttributes: new { @class = "control-label" })<span style="color:red;"> *</span>
                <br />
                @Html.DropDownListFor(model => model.Tipo, new SelectList(listaTipo, "key", "value"), new { @class = "form-control formfield" })
                @Html.ValidationMessageFor(model => model.TipoAsString, "", new { @class = "text-danger" })
            </div>
        </section>

        <section class="col col-4">
            <div class="form-group">
                @Html.LabelFor(model => model.ClienteId, htmlAttributes: new { @class = "control-label" })
                @Html.DropDownListFor(model => model.ClienteId, clientes, "--- SELECIONE ---", new { @class = "select2", @style = "width:100%" })
               
            </div>
        </section>

        <section class="col col-4">
            <div class="form-group">
                @Html.LabelFor(model => model.EmpresaCliente)
                @Html.EditorFor(model => model.EmpresaCliente, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EmpresaCliente, "", new { @class = "text-danger" })
            </div>
        </section>
    </div>

    <div class="row">
        <section class="col col-6">
            <div class="form-group">
                @Html.LabelFor(model => model.Prazo, htmlAttributes: new { @class = "control-label" })
                <br />
                @Html.TextBoxFor(model => model.Prazo, "{0:dd/MM/yyyy}", new { @class = "datepicker form-control filtro-data cursodatepicker max-width", @style = "width:100%", @placeholder = "Data de Aniversário", @Value = @DateTime.Today.Date.ToShortDateString() })
            </div>
        </section>

        <section class="col col-6">
            <div class="form-group">
                @Html.LabelFor(model => model.File)<span style="color:red;"> *</span>
                @Html.TextBoxFor(model => model.File, new { @class = "form-control formfield", type = "file" })
                @Html.ValidationMessageFor(model => model.File, "", new { @class = "text-danger" })
            </div>
        </section>
    </div>

    <div class="row">
        <section class="col col-8">
            <div class="form-group">
                @Html.LabelFor(model => model.Descricao)
                @Html.TextAreaFor(model => model.Descricao, new { @class = "input-lg form-control bigformfield" })
                @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
            </div>
        </section>
    </div>



    <div class="form-group">
        @Html.LabelFor(model => model.FreguenciaCompraViewModel.FirstOrDefault().FrequenciaAsString, htmlAttributes: new { @class = " format-lable-register control-label" })
        <br />
        <table id="datatable_fixed_column" class="table table-bordered table-striped table-hover datatable_fixed_column" width="100">
            @if (Model.FreguenciaCompraViewModel != null && Model.FreguenciaCompraViewModel.Count > 0)
            {
