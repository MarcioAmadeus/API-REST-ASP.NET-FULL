        <li>@StringResources.Inicio</li>
        <li>@ContratosResources.Contratos</li>
        <li>@ContratosResources.GerenciarEmpresa</li>
    }*@

@{
    var Resultado = ViewBag.ResultadoHome;
}

@if (@Resultado != null)
{

    <div class="alert alert-success">
        <strong>@Resultado</strong>
    </div>
}

<!-- widget grid -->
<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <h1 class="page-title txt-color-blueDark">
                <i class="fa fa-lg fa-fw fa-user"></i>
                Gerenciar Cliente
            </h1>
        </div>
    </div>
    <section id="widget-grid" class="">
        <!-- row -->
        <div class="row">
            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                    
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Cliente</h2>
                    </header>
                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">
                            <div class="dt-toolbar">
                                <p>
                                    <a href="@Url.Action("AdicionarCliente")" class="btn btn-success btn-xs">
                                        <span><i class="fa fa-plus"></i> Adicionar</span>
                                    </a>
                                </p>
                            </div>
                            @if (Model == null || Model.Count() == 0)
                            {
                                <div class="padding-10">
                                    <p>Nenhum Cliente Encontrado</p>
                                </div>
                            }
                            else
                            {
                                <table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
                                    <thead>
                                        <tr>
                                            <th data-class="expand"><i class="fa fa-fw fa-suitcase txt-color-blue hidden-md hidden-sm hidden-xs"></i> @Html.DisplayNameFor(model => model.EmpresaCliente)</th>
                                            <th data-hide="phone,tablet"><i class="fa fa-fw fa-user txt-color-blue hidden-md hidden-sm hidden-xs"></i> @Html.DisplayNameFor(model => model.Responsavel)</th>
                                            <th data-hide="phone,tablet"><i class="fa fa-fw fa-envelope txt-color-blue hidden-md hidden-sm hidden-xs"></i> @Html.DisplayNameFor(model => model.Email)</th>
                                            <th>Ações</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td id="NomeFantasia">
                                                    @Html.DisplayFor(modelItem => item.EmpresaCliente)
                                                </td>
                                                <td id="NomeFantasia">
                                                    @Html.DisplayFor(modelItem => item.Responsavel)
                                                </td>
                                                <td id="NomeFantasia">
                                                    @Html.DisplayFor(modelItem => item.Email)
                                                </td>
                                                <td>
                                                    <a href="@Url.Action("VisualizarCliente", new { clienteId = item.Id })" class="btn btn-success btn-xs">
                                                        <span><i class="fa fa-eye"></i>Visualizar </span>
                                                    </a>
                                                    <a href="@Url.Action("GerenciarContatos","Contatos", new { clienteId = item.Id })" class="btn btn-info btn-xs">
                                                        <span><i class="fa fa-eye"></i>Contatos </span>
                                                    </a>
                                                    <a href="@Url.Action("EditarCliente", new { clienteId = item.Id })" class="btn btn-primary btn-xs">
                                                        <span><i class="fa fa-edit"></i>Editar</span>
                                                    </a>
                                                    <a href="@Url.Action("ExcluirCliente", new {clienteId= item.Id})" class="btn btn-danger btn-xs">
                                                        <span><i class="fa fa-edit"></i>Excluir</span>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                        </div>
                        <!-- end widget content -->

                    </div>
                    <!-- end widget div -->

                </div>
                <!-- end widget -->
            </article>
            <!-- WIDGET END -->
        </div>
        <!-- end row -->
        <!-- end row -->
    </section>
    <!-- end widget grid -->
</div>

