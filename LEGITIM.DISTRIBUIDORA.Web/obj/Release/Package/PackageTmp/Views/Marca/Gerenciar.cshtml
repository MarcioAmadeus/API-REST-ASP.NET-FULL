@model IEnumerable<LEGITIM.DISTRIBUIDORA.Web.Models.Marca.MarcaViewModel>

@*@section Breadcrumb {
        <li>@StringResources.Inicio</li>
        <li>@ContratosResources.Contratos</li>
        <li>@ContratosResources.GerenciarEmpresa</li>
    }*@
@{
    var Resultado = ViewBag.ResultadoHome;
}

@if (@Resultado != null)
{

    <div class="alert alert-success">
        <strong>@Resultado</strong>
    </div>
}

<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark">
                <i class="fa fa-lg fa-fw fa-cubes"></i>
                Gerenciar Marcas
            </h1>
        </div>
    </div>

    <section id="widget-grid">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget jarviswidget-color-blueDark" data-widget-editbutton="false" data-widget-deletebutton="false" id="wid-id-0">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Marcas</h2>
                    </header>
                    <div>
                        <div class="widget-body no-padding">
                            <div class="dt-toolbar">
                                <p>
                                    <a href="@Url.Action("Adicionar")" class="btn btn-success btn-xs">
                                        <span><i class="fa fa-plus"></i> Adicionar</span>
                                    </a>
                                </p>
                            </div>

                            @if (Model == null || Model.Count() == 0)
                            {
                                <div class="padding-10">
                                    <p>Nenhuma Marca Encontrada</p>
                                </div>
                            }
                            else
                            {

                                <table id="datatable_fixed_column" class="table table-striped table-bordered" width="100%">
                                    <thead>
                                        <tr>
                                            <th class="hasinput" data-class="expand">
                                                <input type="text" class="form-control" placeholder="Filtrar Nome" />
                                            </th>
                                            <th class="hasinput" data-hide="phone,tablet">
                                                <input type="text" class="form-control" placeholder="Filtrar Imagem" />
                                            </th>
                                            <th class="hasinput" data-hide="phone,tablet">
                                                <input type="text" class="form-control" placeholder="Filtrar Descrição" />
                                            </th>
                                            <th></th>
                                        </tr>
                                        <tr>
                                            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Nome)</th>
                                            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().PathName)</th>
                                            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Descricao)</th>
                                            <th> Ações</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr id="item">
                                                <td id="NomeFantasia">
                                                    @Html.DisplayFor(modelItem => item.Nome)
                                                </td>
                                                <td id="NomeFantasia">
                                                    <a href="@Url.Content(item.Path)" target="_blank">
                                                        @item.PathName
                                                    </a>
                                                </td>
                                                <td id="TipoEmpresa">
                                                    @Html.DisplayFor(modelItem => item.Descricao)
                                                </td>
                                                <td>
                                                    <a href="@Url.Action("Editar", new { marcaId = item.Id })" class="btn btn-primary btn-xs">
                                                        <span><i class="fa fa-edit"></i>Editar</span>
                                                    </a>
                                                    <a href="@Url.Action("Excluir", new { marcaId = item.Id })" class="btn btn-danger btn-xs">
                                                        <span><i class="fa fa-edit"></i>Excluir</span>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
<script>
    $('#modal_link').click(function () {
        $('#dialog-message').dialog('open');
        return false;
    });
</script>
