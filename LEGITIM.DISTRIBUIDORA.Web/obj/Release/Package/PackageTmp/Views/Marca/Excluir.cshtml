@model LEGITIM.DISTRIBUIDORA.Web.Models.Marca.MarcaViewModel

<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark">
                <i class="fa fa-lg fa-fw fa-cubes"></i>
                Excluir Marca
            </h1>
        </div>
    </div>

    @*@Html.Partial("_Mensagem")*@

    <section id="widget-grid">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget jarviswidget-color-blueDark" data-widget-editbutton="false" data-widget-deletebutton="false" id="wid-id-0">
                    <header role="heading">
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Marca</h2>
                    </header>
                    <div role="content">
                        <div class="widget-body">
                            <div class="modal-body">
                                <div class="form-group ">
                                    @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label" })
                                    <br />
                                    @Html.TextBoxFor(model => model.Nome, new { @class = "form-control formfield", disabled = "disabled" })
                                </div>
                                <div class="form-group ">
                                    @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label" })
                                    <br />
                                    @Html.TextBoxFor(model => model.Descricao, new { @class = "form-control formfield", disabled = "disabled" })
                                </div>
                                <div class="form-group ">
                                    @Html.LabelFor(model => model.PathName, htmlAttributes: new { @class = "control-label" })
                                    <br />
                                    <a href="@Url.Content(Model.Path)" target="_blank">
                                        @Model.PathName
                                    </a>
                                </div>
                            </div>
                            <div class="modal-footer">
                                @Html.ActionLink("Cancelar", "Gerenciar", new { }, new { @class = "btn btn-default" })
                                @Html.ActionLink("Excluir", "ExcluirButton", "Marca", new { marcaId = Model.Id }, new { @class = "btn btn-danger" })
                            </div>
                        </div>
                    </div>
                </div>

            </article>
        </div>
    </section>
</div>
















