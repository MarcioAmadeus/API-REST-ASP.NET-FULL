@model IEnumerable<LEGITIM.DISTRIBUIDORA.Web.Models.Contatos.ContatosViewModel>

@*@section Breadcrumb {
        <li>@StringResources.Inicio</li>
        <li>@ContratosResources.Contratos</li>
        <li>@ContratosResources.GerenciarEmpresa</li>
    }*@

@{
    var Resultado = ViewBag.ResultadoHome;
    var clienteId = ViewBag.clienteId;
}

@if (@Resultado != null)
{

    <div class="alert alert-success">
        <strong>@Resultado</strong>
    </div>
}

<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <h1 class="page-title txt-color-blueDark">
                <i class="fa fa-lg fa-fw fa-user"></i>
                Gerenciar Contatos
            </h1>
        </div>
    </div>
    <section id="widget-grid" class="">
        <!-- row -->
        <div class="row">
            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                    <!-- widget options:
                    usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">
                    data-widget-colorbutton="false"
                    data-widget-editbutton="false"
                    data-widget-togglebutton="false"
                    data-widget-deletebutton="false"
                    data-widget-fullscreenbutton="false"
                    data-widget-custombutton="false"
                    data-widget-collapsed="true"
                    data-widget-sortable="false"
                    -->
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Contatos</h2>
                    </header>
                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">
                            <div class="dt-toolbar">
                                <p>
                                    <a href="@Url.Action("AdicionarContato", new { clienteId = clienteId })" class="btn btn-success btn-xs">
                                        <span><i class="fa fa-plus"></i> Adicionar</span>
                                    </a>
                                </p>
                            </div>
                            @if (Model == null || Model.Count() == 0)
                            {
                                <div class="padding-10">
                                    <p>Nenhum Contato Encontrado</p>
                                </div>
                            }
                            else
                            {
                                <table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
                                    <thead>
                                        <tr>
                                            <th data-class="expand"><i class="fa fa-fw fa-edit txt-color-blue hidden-md hidden-sm hidden-xs"></i> @Html.DisplayNameFor(model => model.Nome)</th>
                                            <th data-hide="phone,tablet"><i class="fa fa-fw fa-barcode txt-color-blue hidden-md hidden-sm hidden-xs"></i> @Html.DisplayNameFor(model => model.Email)</th>
                                            <th data-hide="phone,tablet"><i class="fa fa-fw fa-archive txt-color-blue hidden-md hidden-sm hidden-xs"></i> @Html.DisplayNameFor(model => model.Telefone)</th>
                                            <th data-hide="phone,tablet"><i class="fa fa-fw fa-archive txt-color-blue hidden-md hidden-sm hidden-xs"></i> @Html.DisplayNameFor(model => model.Celular)</th>
                                            <th data-hide="phone,tablet"><i class="fa fa-fw fa-archive txt-color-blue hidden-md hidden-sm hidden-xs"></i> @Html.DisplayNameFor(model => model.DataAniversarioAsString)</th>
                                            <th>Ações</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td id="NomeFantasia">
                                                    @Html.DisplayFor(modelItem => item.Nome)
                                                </td>
                                                <td id="NomeFantasia">
                                                    @Html.DisplayFor(modelItem => item.Email)
                                                </td>
                                                <td id="NomeFantasia">
                                                    @Html.DisplayFor(modelItem => item.Telefone)
                                                </td>
                                                <td id="NomeFantasia">
                                                    @Html.DisplayFor(modelItem => item.Celular)
                                                </td>
                                                <td id="NomeFantasia">
                                                    @Html.DisplayFor(modelItem => item.DataAniversarioAsString)
                                                </td>
                                                <td>
                                                    <a href="@Url.Action("EditarContato", new { contatoId = item.Id, clienteId = clienteId })" class="btn btn-primary btn-xs">
                                                        <span><i class="fa fa-edit"></i>Editar</span>
                                                    </a>
                                                    <a href="@Url.Action("ExcluirContato", new {contatoId = item.Id, clienteId = clienteId})" class="btn btn-danger btn-xs">
                                                        <span><i class="fa fa-edit"></i>Excluir</span>
                                                    </a>
                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            }
                        </div>
                        <!-- end widget content -->

                    </div>
                    <!-- end widget div -->

                </div>
                <!-- end widget -->
            </article>
            <!-- WIDGET END -->
        </div>
        <!-- end row -->
        <!-- end row -->
    </section>
    <!-- end widget grid -->
</div>
