@model  LEGITIM.DISTRIBUIDORA.Web.Models.Distribuidor.DistribuidorViewModel
<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark">
                <i class="fa fa-lg fa-fw fa-truck"></i>
                Excluir Fornecedor
            </h1>
        </div>
    </div>
    @*@Html.Partial("_Mensagem")*@
    <section id="widget-grid">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget jarviswidget-color-blueDark" data-widget-editbutton="false" data-widget-deletebutton="false" id="wid-id-0">
                    <header role="heading">
                        <span class="widget-icon"> <i class="fa fa-truck"></i> </span>
                        <h2>Fornecedor</h2>
                    </header>
                    <div role="content">
                        <div class="widget-body">
                            @Html.HiddenFor(model => model.Id)
                            <div class="modal-body">
                                <div class="form-group ">
                                    @Html.LabelFor(model => model.EmpresaFornecedor, htmlAttributes: new { @class = "control-label" })
                                    <br />
                                    @Html.TextBoxFor(model => model.EmpresaFornecedor, new { @class = "form-control formfield", disabled = "disabled" })
                                </div>
                                <div class="form-group ">
                                    @Html.LabelFor(model => model.Responsavel, htmlAttributes: new { @class = "control-label" })
                                    <br />
                                    @Html.TextBoxFor(model => model.Responsavel, new { @class = "form-control formfield", disabled = "disabled" })
                                </div>
                                <div class="form-group ">
                                    @Html.LabelFor(model => model.Endereco, htmlAttributes: new { @class = "control-label" })
                                    <br />
                                    @Html.TextBoxFor(model => model.Endereco, new { @class = "form-control formfield", disabled = "disabled" })
                                </div>
                                <div class="form-group ">
                                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label" })
                                    <br />
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control formfield", disabled = "disabled" })
                                </div>
                            </div>
                            <div class="modal-footer">
                                @Html.ActionLink("Cancelar", "GerenciarDistribuidor", null, new { @class = "btn btn-default" })
                                @Html.ActionLink("Excluir", "ExcluirDistribuidorButton", "Fornecedor", new { distribuidorId = Model.Id }, new { @class = "btn btn-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>


