        <section class="col col-8">
            <div class="form-group">
                @Html.LabelFor(model => model.Observacao)
                @Html.TextAreaFor(model => model.Observacao, new { @class = "input-lg form-control bigformfield" })
                @Html.ValidationMessageFor(model => model.Observacao, "", new { @class = "text-danger" })
            </div>
        </section>
    </div>




    <div class="form-group">
        <h3>Produtos </h3>
        <br />
        <div class="row">
            @*@Html.HiddenFor(model => Model.ProdutoViewModel)*@
            @if (Model.ProdutoViewModel != null && Model.ProdutoViewModel.Count > 0)
            {
                for (int i = 0; i < Model.ProdutoViewModel.Count; i++)
                {
                    if (i < Model.ProdutoViewModel.Count)
                    {
                       
                    <section class="col col-4">
                        <div class="form-group">
                            @Html.HiddenFor(model => Model.ProdutoViewModel[i].Descricao)
                            @Html.CheckBoxFor(model => model.ProdutoViewModel[i].check, new { @class = "state-error" }) @Model.ProdutoViewModel[i].Descricao
                            <br />
                            @Html.LabelFor(model => Model.ProdutoViewModel[i].ValorUnitario)
                            @Html.EditorFor(model => Model.ProdutoViewModel[i].ValorUnitario, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </section>
                     
                    }
                    if (i < Model.ProdutoViewModel.Count - 1)
                    {
                        i = i + 1;
                        <section class="col col-4">
                            <div class="form-group">
                                @Html.HiddenFor(model => Model.ProdutoViewModel[i].Descricao)
                                @Html.CheckBoxFor(model => model.ProdutoViewModel[i].check, new { @class = "state-error" }) @Model.ProdutoViewModel[i].Descricao
                                <br />
                                @Html.LabelFor(model => Model.ProdutoViewModel[i].ValorUnitario)
                                @Html.EditorFor(model => Model.ProdutoViewModel[i].ValorUnitario, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </section>
                    }
                    if (i < Model.ProdutoViewModel.Count - 1)
                    {
                        i = i + 1;
                        <section class="col col-4">
                            <div class="form-group">
                                @Html.HiddenFor(model => Model.ProdutoViewModel[i].Descricao)
                                @Html.CheckBoxFor(model => model.ProdutoViewModel[i].check, new { @class = "state-error" }) @Model.ProdutoViewModel[i].Descricao
                                <br />
                                @Html.LabelFor(model => Model.ProdutoViewModel[i].ValorUnitario)
                                @Html.EditorFor(model => Model.ProdutoViewModel[i].ValorUnitario, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </section>
                    }
                }
            }

        </div>
    </div>
</fieldset>

