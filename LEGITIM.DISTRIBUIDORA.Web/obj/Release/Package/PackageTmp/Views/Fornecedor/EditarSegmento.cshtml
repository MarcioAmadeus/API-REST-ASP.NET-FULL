@model  LEGITIM.DISTRIBUIDORA.Web.Models.Distribuidor.SegmentoViewModel


<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark">
                <i class="fa fa-lg fa-fw fa-folder"></i>
                Editar Segmento
            </h1>
        </div>
    </div>

    @*@Html.Partial("_Mensagem")*@

    <section id="widget-grid">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget jarviswidget-color-blueDark" data-widget-editbutton="false" data-widget-deletebutton="false" id="wid-id-0">
                    <header role="heading">
                        <span class="widget-icon"> <i class="fa fa-folder"></i> </span>
                        <h2>Segmento</h2>
                    </header>
                    <div role="content">
                        <div class="widget-body">
                            @using (Html.BeginForm("EditarSegmento", "Fornecedor", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.Partial("_FormSegmento")
                                <div class="form-actions">
                                    @Html.ActionLink("Cancelar", "GerenciarSegmento", null,
                                       new { @class = "btn btn-default" })
                                    <button class="btn btn-primary" type="submit">
                                        <i class="fa fa-save"></i>
                                        Salvar
                                    </button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
