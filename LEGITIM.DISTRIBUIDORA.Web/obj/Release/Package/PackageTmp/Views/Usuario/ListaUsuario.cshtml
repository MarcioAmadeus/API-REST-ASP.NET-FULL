@model LEGITIM.DISTRIBUIDORA.Web.Models.Usuarios.UsuarioViewModel

@{
    ViewBag.Title = "Lista de Usuários";
}

@{
    var Resultado = ViewBag.ResultadoHome;
}

@if (@Resultado != null)
{

    <div class="alert alert-success">
        <strong>@Resultado</strong>
    </div>
}
<div id="content">
    <div class="row">
        <div class="col-lg-9">
            <h1 class="page-title txt-color-blueDark">
                <i class="fa fa-lg fa-fw fa-user">   </i>
                Gerenciar Usuários
            </h1>
        </div>
    </div>

    <section id="widget-grid" class="">
        <!-- row -->
        <div class="row">
            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                    <!-- widget options:
                    usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">
                    data-widget-colorbutton="false"
                    data-widget-editbutton="false"
                    data-widget-togglebutton="false"
                    data-widget-deletebutton="false"
                    data-widget-fullscreenbutton="false"
                    data-widget-custombutton="false"
                    data-widget-collapsed="true"
                    data-widget-sortable="false"
                    -->
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Produto</h2>
                    </header>
                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">
                            <div class="dt-toolbar">
                                <p>
                                    <a href="@Url.Action("CadastraUsuario")" class="btn btn-success btn-xs">
                                        <span><i class="fa fa-plus"></i> Adicionar</span>
                                    </a>
                                </p>
                            </div>
                            @if (Model == null || Model.ListaAtribuiPerfil.Count() == 0 || Model.ListaAtribuiPerfil == null)
                            {
                                <div class="padding-10">
                                    <p>Nenhum Usuários Encontrado</p>
                                </div>
                            }
                            else
                            {

                                <table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
                                    <thead>
                                       
                                        <tr>
                                            <th data-class="expand"><i class="fa fa-fw fa-user txt-color-blue hidden-md hidden-sm hidden-xs"></i>@Html.DisplayNameFor(model => model.ListaAtribuiPerfil.First().Nome)</th>
                                            <th data-hide="phone,tablet"><i class="fa fa-fw fa-sign-in txt-color-blue hidden-md hidden-sm hidden-xs"></i> @Html.DisplayNameFor(model => model.ListaAtribuiPerfil.First().Login)</th>
                                            <th data-hide="phone,tablet"><i class="fa fa-fw fa-envelope txt-color-blue hidden-md hidden-sm hidden-xs"></i> @Html.DisplayNameFor(model => model.ListaAtribuiPerfil.First().Email)</th>
                                            <th data-hide="phone,tablet"><i class="fa fa-fw fa-edit txt-color-blue hidden-md hidden-sm hidden-xs"></i> @Html.DisplayNameFor(model => model.ListaAtribuiPerfil.First().PerfilDescricao)</th>
                                            <th>Ações</th>
                                            @*<th>
                                                @Html.DisplayNameFor(model => model.ListaAtribuiPerfil.First().Nome)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.ListaAtribuiPerfil.First().Login)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.ListaAtribuiPerfil.First().Email)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.ListaAtribuiPerfil.First().PerfilDescricao)
                                            </th>
                                            <th>
                                                Ações
                                            </th>*@
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < Model.ListaAtribuiPerfil.Count(); i++)
                                        {
                                            <tr id="item">
                                                <td>
                                                    @Html.DisplayFor(model => model.ListaAtribuiPerfil[i].Nome)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(model => model.ListaAtribuiPerfil[i].Login)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(model => model.ListaAtribuiPerfil[i].Email)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(model => model.ListaAtribuiPerfil[i].PerfilDescricao)
                                                </td>
                                                <td>
                                                    <a href="@Url.Action("EditarUsuario", new { usuarioId =  Model.ListaAtribuiPerfil[i].Id })" class="btn btn-primary btn-xs">
                                                        <span><i class="fa fa-edit"></i>Editar</span>
                                                    </a>
                                                    <a href="@Url.Action("ExcluirUsuario", new { usuarioId =  Model.ListaAtribuiPerfil[i].Id })" class="btn btn-danger btn-xs">
                                                        <span><i class="fa fa-trash-o"></i>Excluir</span>
                                                    </a>

                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
<script src="~/Scripts/Custom/ListaUsuarioScripts.js" type="text/javascript"></script>